# Gmail IMAP Configuration
# Copy this file to .env and fill in your values

# Your Gmail email address
GMAIL_EMAIL=mandipinder@gmail.com

# Your Gmail App Password (not your regular password!)
# Generate this at: https://myaccount.google.com/apppasswords
GMAIL_APP_PASSWORD=your_app_password_here

# Gmail label to monitor (default: substackrag)
GMAIL_LABEL=substackrag

# RAG API endpoint URL
RAG_API_URL=http://localhost:8001/inbound-email

# AI/ML API Keys
# Cohere API Key (Primary embedding service)
# Get from: https://console.cohere.ai/
COHERE_API_KEY=your_cohere_api_key_here

# Google Gemini API Key (Fallback embedding service)
# Get from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Optional: Override default settings
# IMAP_SERVER=imap.gmail.com
# IMAP_PORT=993 